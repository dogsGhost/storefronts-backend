extends layout

block content
  .row
    .col-md-8.col-md-offset-2
      h2= pageName
      hr
      p Fill in the form below to sign in.

      include ./error-msg.jade

      form#loginForm(method='post')
        .form-group
          label(for='username') Username
          input#username.form-control(type='text', name='username', placeholder='Username', required)
        
        .form-group
          label(for='password') Password
          input#password.form-control(type='password', name='password', required)
        
        input.btn.btn-primary(type='submit', value='Login')

  script(src='lib/validator.js')
  script(src='lib/login.js')
